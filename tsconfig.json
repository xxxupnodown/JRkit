{
  "include": ["./src"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./bin",
    "target": "es5",
    "paths": {
      "@": ["./src"],
      "@utils": ["./src/utils"],
      "@config": ["./src/config"],
      "@commands": ["./src/commands"]
    }
  }
}
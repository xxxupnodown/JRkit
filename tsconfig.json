{
  "include": ["src"],
  "exclude": ["node_modules/"],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "target": "es5",
    "outDir": "./bin",
    "paths": {
      "@": ["./src"],
      "@types": ["./src/types"],
      "@config": ["./src/config"],
      "@commands": ["./src/commands"],
      "@utils": ["./src/utils"]
    }
  }
}